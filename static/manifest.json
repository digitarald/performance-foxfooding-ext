{
  "manifest_version": 2,
  "name": "Performance Foxfooding",
  "description": "Crowd-sourced Firefox Profiling WebExtension.",
  "version": "0.0.12",
  "permissions": [
    "geckoProfiler",
    "storage",
    "notifications",
    "tabs",
    "https://performance-foxfooding.herokuapp.com/",
    "https://quantum-flow.s3.amazonaws.com/",
    "https://www.google-analytics.com/"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "applications": {
    "gecko": {
      "id": "quantum-foxfooding@mozilla.com",
      "strict_min_version": "55.0a1",
      "update_url": "https://raw.githubusercontent.com/digitarald/performance-foxfooding-ext/master/updates.json"
    }
},
  "browser_action": {
    "default_icon": "icons/icon-disabled.svg",
    "default_title": "Ready. Set. Foxfood!",
    "browser_style": false
  }
}
